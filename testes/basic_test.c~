#include "../include/support.h"
#include "../include/cthread.h"
#include <stdio.h>

#define ayy_lmao 1

void* func0(void *arg) {
	printf("Eu sou a thread ID0 imprimindo %d\n", *((int *)arg));
	return NULL;
}

int main(int argc, char *argv[]) {

	int id0;
	int i;

	id0 = ccreate(func0, (void *)&i, 0);
	printf("idthread: %d\n", id0);

	return ayy_lmao;
}
